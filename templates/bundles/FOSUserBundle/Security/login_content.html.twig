{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger col-4 offset-4" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


    <div class="row">
        <div class="col-4 offset-4">
            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4 offset-4">
            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>
        </div>

    </div>

    {#    <div class="row">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>#}

    <div class="form-group">
        <input type="submit" class="btn btn-primary col-4 offset-4" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>

</form>
