
{% extends "base.html.twig" %}

{% block body %}


    {{ form_start(form) }}
    <div class="container-fluid formulaire">
        <div class="container">

            <div class="row">
                <div class="col">
                    {{ form_row(form.nom, {'label': 'Nom'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.prenom, {'label': 'Prénom'}) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(form.telephone, {'label': 'Téléphone'}) }}
                </div>

                <div class="col">
                    {{ form_row(form.email, {'label': 'Adresse mail'}) }}
                </div>
            </div>

            <div class="row">

                <div class="col">
                    {{ form_row(form.dateNaissance, {'label': 'Date de naissance'}) }}
                </div>

                <div class="col">
                    {{ form_row(form.sujet, {'label': 'Sujet'}) }}
                </div>
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(form.message, {'label': 'Message'}) }}
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary col-4 offset-4">Envoyer</button>
            </div>

        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}




